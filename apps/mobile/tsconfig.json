{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "types": ["nativewind/types"],
    "ignoreDeprecations": "6.0",
    "baseUrl": ".",
    "paths": {
      "@schemas/*": ["../../packages/schemas/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "nativewind-env.d.ts",
    "src/constants/colors.ts",
    "../../packages/schemas/**/*.ts"
  ]
}
